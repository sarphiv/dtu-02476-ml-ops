{
    "name": "Dockerfile devcontainer",
    "build": {
        "context": "..",
        "dockerfile": "../dockerfiles/dev.Dockerfile"
    },
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=.,target=/workspace,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "hostRequirements": {
        "gpu": true,
        "memory": "4gb"
    },
    "runArgs": [
        "--shm-size=4gb"],
    "overrideCommand": true
}
